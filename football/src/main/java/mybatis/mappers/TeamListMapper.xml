<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.mappers.TeamListMapper">
	<!-- 페이지에서 팀을 만들 때 insert할 sql -->
	<insert id="insertTeamInfo" parameterType="kr.co.sist.football.TeamList.model.dto.TeamListDTO">
		insert into
		team_info values
		(#{id}, #{name} ,#{logo_path}, #{present_num}, #{max_num}, #{uniform_color_code},
		#{strength_code}, #{location}, #{formation})
	</insert>
	<!-- *로그인 가정* 팀페이지 클릭시 팀에 소속되어 있지 않으면 생성되어있는 팀 정보 출력 sql  -->
	<select id="selectTeaminfo" parameterType="hashmap" resultType="kr.co.sist.football.TeamList.model.dto.TeamListDTO">
		select * from team_info
	</select>
	<!-- *로그인 가정* 팀페이지 클릭시 팀에 소속되어 있지 않으면 팀정보로 이동하기 위해 team_id값 뽑아내는 sql -->
	<select id="selectTeamIdOfMember" parameterType="int" resultType="int">
		select team_id from member where id = #{id}
	</select>
	<!-- 팀 리스트에서 특정 팀을 클릭하였을 때 특정팀의 id값 가져오는 sql -->
	<select id="selectTeaminfo" parameterType="hashmap" resultType="kr.co.sist.football.TeamList.model.dto.TeamListDTO">
		select * from team_info where id= #{id}
	</select>
</mapper>